<header class="navHeader">
  <div class="content navContent">
    <a id="logo">ClutterBox</a>
    <nav>
      <ul>
        <li><%= link_to "Popular", popular_bookmarks_path %></li>
        <li><%= link_to "Tags", tags_path %></li>
        <% if signed_in? %>
          <li><%= link_to "My Bookmarks",user_path(@current_user) %></li>
          <li><%= link_to "Account", edit_user_path(@current_user) %></li>
          <li><%= link_to "Logout", logout_path, method: "delete" %></li>
        <% else %>
          <li><%= link_to "Sign Up", signup_path %></li>
          <li><%= link_to "Sign In", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>