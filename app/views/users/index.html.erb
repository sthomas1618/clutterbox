<h1> Users </h1>
<section id="users" class="feed">
  <% @users.each_with_index do |user, index| %>
    <article>
      <h3>
        <%= link_to user[:username], user_path(index) %>
      </h3>
      <div>      
        <%= link_to "Delete", user_path(index), method: :delete,
                    data: { confirm: "Are you sure you want to delete this user?" } %>
      </div>
    </article>
  <% end %>
</section>